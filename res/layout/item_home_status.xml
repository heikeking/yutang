<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smartImageView="http://schemas.android.com/apk/res/com.itteam.yutang"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/title_lr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <com.yzh.android.view.ScaleBitmapView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            smartImageView:imgname="@drawable/ellipse_2"
            smartImageView:scalesize="0.5" />

        <TextView
            android:id="@+id/tangkouname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView1"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="TextView" />

    	<ImageView
    	    android:id="@+id/arraw_img"
    	    android:layout_width="40dp"
    	    android:layout_height="40dp"
    	    android:layout_alignParentRight="true"
    	    android:background="@drawable/togglearrow"
    	    android:focusable="false"
    	    android:focusableInTouchMode="false"
    	    android:layout_centerVertical="true"
    	    android:textOff=""
        	android:textOn="" />

    </RelativeLayout>

</RelativeLayout>