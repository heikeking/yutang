<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom2="http://schemas.android.com/apk/res/com.itteam.yutang"
    xmlns:fbutton="http://schemas.android.com/apk/res/com.itteam.yutang"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp" >

        <ImageView
            android:id="@+id/fitImageView"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/lockicon" />

        <com.yzh.android.view.EditTextWithDeleteButton
            android:id="@+id/editTextWithDeleteButton"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/fitImageView"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10sp"
            android:visibility="visible"
            custom2:hintText="请输入原密码:"
            custom2:deleteButtonRes="@drawable/text_field_clear_btn"
            custom2:edittextcolor="@color/edit_text" >
        </com.yzh.android.view.EditTextWithDeleteButton>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl1" >

        <ImageView
            android:id="@+id/fitImageView2"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/lockicon" />

        <com.yzh.android.view.EditTextWithDeleteButton
            android:id="@+id/editTextWithDeleteButton2"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/fitImageView2"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10sp"
            android:visibility="visible"
            custom2:hintText="请输入新密码:"
            custom2:deleteButtonRes="@drawable/text_field_clear_btn"
            custom2:edittextcolor="@color/edit_text" >
        </com.yzh.android.view.EditTextWithDeleteButton>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl2" >

        <ImageView
            android:id="@+id/fitImageView3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/lockicon" />

        <com.yzh.android.view.EditTextWithDeleteButton
            android:id="@+id/editTextWithDeleteButton3"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/fitImageView3"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10sp"
            android:visibility="visible"
            custom2:hintText="请再次输入新密码:"
            custom2:deleteButtonRes="@drawable/text_field_clear_btn"
            custom2:edittextcolor="@color/edit_text" >
        </com.yzh.android.view.EditTextWithDeleteButton>
    </RelativeLayout>
 	<com.yzh.android.view.FButton
 	    	android:layout_centerHorizontal="true"
     		android:layout_below="@+id/rl3"
     		android:layout_marginTop="20dp"
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/white"
            android:textStyle="bold"
            fbutton:buttonColor="@color/main_color"
            fbutton:cornerRadius="5dp"
            fbutton:height_btn="0.08"
            fbutton:shadowColor="@color/fbutton_color_asbestos"
            fbutton:shadowEnabled="false"
            fbutton:shadowHeight="5dp"
            fbutton:width_btn="0.5" />
</RelativeLayout>