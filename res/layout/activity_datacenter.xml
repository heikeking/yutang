<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/main_color"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_width="65dp"
        tl:tl_textSelectColor="@color/main_color"
        tl:tl_textUnselectColor="@color/main_gray"
        tl:tl_textsize="18sp"
        tl:tl_underline_color="@color/brown" />
	<View 
	    android:id="@+id/bg"
	    android:layout_below="@+id/tl_3"
	    android:layout_width="match_parent"
	    android:layout_height="3dp"
	    android:background="@color/grown_light"/>
    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg"/>

</RelativeLayout>